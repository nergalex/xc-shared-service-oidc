{
  "metadata": {
    "name": "{{ extra_namespace_app }}-public",
    "namespace": "{{ extra_volterra_namespace }}",
    "labels": {
      "ves.io/app_type": "cloudbuilder",
      "owner": "{{ extra_owner_email.split('@')[0] }}",
      "project": "cloudbuilder"
    },
    "description": "NGINX workshop",
    "disable": false
  },
  "spec": {
    "domains": [
      "{{ extra_namespace_app }}.{{ extra_app.domain }}"
    ],
    "https_auto_cert": {
      "http_redirect": true,
      "add_hsts": true,
      "no_mtls": {},
      "tls_config": {
        "default_security": {}
      },
      "default_header": {},
      "enable_path_normalize": {}
    },
    {%- if extra_virtual_site == "CE" -%}
    "advertise_on_public_default_vip": {},
    {%- endif -%}
    {%- if extra_virtual_site == "RE" -%}
    "advertise_on_public": {
      "public_ip": {
        "tenant": "{{ extra_volterra.tenant.full }}",
        "namespace": "shared",
        "name": "{{ extra_dedicated_public_ip }}",
        "kind": "public_ip"
      }
    },
    {%- endif -%}
    "default_route_pools": [],
    "routes": [
      {
        "simple_route": {
          "http_method": "ANY",
          "path": {
            "prefix": "/"
          },
          "headers": [
            {
              "name": "Authorization",
              "presence": true,
              "invert_match": false
            }
          ],
          "origin_pools": [
              {
                "pool": {
                  "tenant": "{{ extra_volterra.tenant.full }}",
                  "namespace": "{{ extra_volterra_namespace }}",
                  "name": "shared-services-jwt-validation-gw"
                },
                "weight": 1,
                "priority": 1,
                "endpoint_subsets": {}
              }
          ],
          "disable_host_rewrite": {},
          "advanced_options": {
            "common_hash_policy": {},
            "priority": "DEFAULT",
            "endpoint_subsets": {},
            "disable_prefix_rewrite": {},
            "request_headers_to_add": [
              {
                "name": "x-my-idp",
                "value": "{{ extra_my_idp }}",
                "append": false
              },
              {
                "name": "x-my-scope",
                "value": "{{ extra_my_scope }}",
                "append": false
              }
            ],
            "request_headers_to_remove": [],
            "response_headers_to_add": [],
            "response_headers_to_remove": [],
            "disable_location_add": false,
            "inherited_waf": {},
            "disable_spdy": {},
            "disable_web_socket_config": {},
            "retry_policy": {
              "retry_condition": [
                "connect-failure",
                "reset",
                "5xx"
              ],
              "num_retries": 1,
              "per_try_timeout": 0,
              "back_off": {
                "base_interval": 25,
                "max_interval": 0
              }
            },
            "timeout": 30000,
            "common_buffering": {},
            "disable_mirroring": {},
            "retract_cluster": {},
            "inherited_bot_defense_javascript_injection": {}
          }
        }
      },
      {
        "simple_route": {
          "http_method": "ANY",
          "path": {
            "prefix": "/"
          },
          "origin_pools": [
              {
                "pool": {
                  "tenant": "{{ extra_volterra.tenant.full }}",
                  "namespace": "{{ extra_volterra_namespace }}",
                  "name": "shared-services-oidc-gw"
                },
                "weight": 1,
                "priority": 1,
                "endpoint_subsets": {}
              }
          ],
          "disable_host_rewrite": {},
          "advanced_options": {
            "common_hash_policy": {},
            "priority": "DEFAULT",
            "endpoint_subsets": {},
            "disable_prefix_rewrite": {},
            "request_headers_to_add": [
              {
                "name": "X-Forwarded-Proto",
                "value": "https",
                "append": false
              },
              {
                "name": "X-Forwarded-Port",
                "value": "443",
                "append": false
              },
              {
                "name": "x-my-idp",
                "value": "{{ extra_my_idp }}",
                "append": false
              },
              {
                "name": "x-my-scope",
                "value": "{{ extra_my_scope }}",
                "append": false
              },
              {
                "name": "x-my-client-id",
                "value": "{{ extra_my_client_id }}",
                "append": false
              }
            ],
            "request_headers_to_remove": [],
            "response_headers_to_add": [],
            "response_headers_to_remove": [],
            "disable_location_add": false,
            "inherited_waf": {},
            "disable_spdy": {},
            "disable_web_socket_config": {},
            "retry_policy": {
              "retry_condition": [
                "connect-failure",
                "reset",
                "5xx"
              ],
              "num_retries": 1,
              "per_try_timeout": 0,
              "back_off": {
                "base_interval": 25,
                "max_interval": 0
              }
            },
            "timeout": 30000,
            "common_buffering": {},
            "disable_mirroring": {},
            "retract_cluster": {},
            "inherited_bot_defense_javascript_injection": {}
          }
        }
      }
    ],
    "disable_api_definition": {},
    "add_location": true,
    "no_challenge": {},
    "more_option": {
      "max_request_header_size": 60,
      "idle_timeout": 40000,
      "disable_default_error_pages": false
    },
    "disable_malicious_user_detection": {},
    "disable_rate_limit": {},
    "waf_exclusion_rules": [],
    "blocked_clients": [],
    "trusted_clients": [],
    "ddos_mitigation_rules": [],
    "service_policies_from_namespace": {},
    "multi_lb_app": {},
    "disable_bot_defense": {},
    "cookie_stickiness": {
      "name": "xc-session",
      "ttl": 3600000,
      "add_secure": {},
      "add_httponly": {}
    }
  }
}